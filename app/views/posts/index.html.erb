<%= link_to 'New post', new_post_path %>
<h1>Listing posts</h1>

<table>
  <tr>
    <th><%= link_to "Title", :sort => "title" %></th>
    <th><%= link_to "Photo", :sort => "photo_url" %></th>
    <th><%= link_to "Author", :sort => "author_name" %></th>
    <th><%= link_to "Caption", :sort => "caption" %></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.photo_url %></td>
      <td><%= post.author_name %></td>
      <td><%= post.caption %></td>

      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>